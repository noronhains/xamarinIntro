<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControlesXF.Controles.ProgressBarPage">
    <ContentPage.Content>
        <StackLayout>
            <ProgressBar Scale="10" x:Name="bar1" ProgressColor="Red" Progress="0.5" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <ProgressBar Scale="10" x:Name="bar2" ProgressColor="Green" Progress="0.5" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <ProgressBar Scale="10" x:Name="bar3" ProgressColor="Blue" Progress="0.5" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <Button Text="Modificar Barras" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>