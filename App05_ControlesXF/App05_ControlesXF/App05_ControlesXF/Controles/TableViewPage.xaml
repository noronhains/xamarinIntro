<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControlesXF.Controles.TableViewPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings">
                <TableRoot>
                    <TableSection Title="Backup">
                        <SwitchCell Text="Fazer backup das imagens" On="False" />
                        <SwitchCell Text="Fazer backup dos vídeos" On="False" />
                        <SwitchCell Text="Fazer backup das mensagens" On="False" />
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Frequencia semanal" VerticalTextAlignment="Center" />
                                <Slider Minimum="0" Maximum="7" HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Segurança">
                        <SwitchCell Text="Senhas criptografadas" On="True" />
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>