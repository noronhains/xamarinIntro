<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App07_Cells"
             x:Class="App07_Cells.MainPage">

    <StackLayout>
        <Image HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, iOS" Value="Logo.png"/>
                    <On Platform="UWP" Value="Logo.png"/>
                </OnPlatform>
            </Image.Source>
        </Image>
        <Image VerticalOptions="Center">
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, iOS" Value="CheckOff.png"/>
                    <On Platform="UWP" Value="Resources/CheckOff.png"/>
                </OnPlatform>
            </Image.Source>
        </Image>
        <Label Text="AAAAAAAAAAAAA"/>
    </StackLayout>

</ContentPage>
